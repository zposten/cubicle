{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["pages", "components", "models", "types"],
  "exclude": ["node_modules"],
}